<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SilentBackup.Styles">

    <!-- Label style = Add, Delete, Edit Buttons -->
    <Style x:Key="LabelButtonStyle"
               TargetType="Label">
        <Setter Property="Foreground" Value="#FFBF4600" />
        <Setter Property="Background" Value="#FF151515" />
        <Setter Property="FontSize"  Value="16" />
        <!-- Mouse over the label-->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True" >
                <Setter Property="BorderBrush" Value="#FFBF4600"/>
                <Setter Property="BorderThickness" Value="0,0,0,2"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Label style = Add, Delete, Edit Buttons -->
    <Style x:Key="PaleWhiteLabelStyle"
               TargetType="Label">
        <Setter Property="Foreground" Value="#FF474747" />
        <Setter Property="Background" Value="{x:Null}" />
        <Setter Property="FontSize"  Value="12" />
        <!-- Mouse over the label-->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True" >
                <Setter Property="Foreground" Value="#FF5D5D5D"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>